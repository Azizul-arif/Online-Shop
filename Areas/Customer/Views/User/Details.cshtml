@model OnlineShop.Models.ApplicationUser
@{
    ViewData["Title"] = "Details";
}
<br />
<br />
<h2 class="text-info">Details of a User</h2>
<div class="container">
    <!--enctype="multipart/form-data" is used to bind data-->
    <form method="post" asp-action="Details" enctype="multipart/form-data" id="user-form">
        <div class="">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />

        <h3>@ViewBag.message</h3>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserName"></label>
            </div>
            <div class="col-5">
                <input asp-for="UserName" class="form-control" readonly="readonly" />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PasswordHash"></label>
            </div>
            <div class="col-5">
                <input asp-for="PasswordHash" class="form-control" readonly="readonly" />
            </div>
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FirstName"></label>
            </div>
            <div class="col-5">
                <input asp-for="FirstName" class="form-control" readonly="readonly" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LastName"></label>
            </div>
            <div class="col-5">
                <input asp-for="LastName" class="form-control" readonly="readonly" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            @*<input type="submit" class="btn btn-primary" value="Update" />*@
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    $(document).ready(function () {
        $("#user-form").validate({
            rules: {
                UserName: {
                    required: true,
                },
                PasswordHash: {
                    required: true,
                }
            },
            messages: {
                UserName: "Enter your Username",
                PasswordHash: "Enter your password"
            }

        });
    });
    </script>
}
