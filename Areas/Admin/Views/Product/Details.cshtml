@model OnlineShop.Models.Products
@{
    ViewData["Title"] = "Details";
}
<br />
<br />
<h2 class="text-info">Edit  Product</h2>
<div class="container">
    <!--enctype="multipart/form-data" is used to bind data-->
    <form method="post" asp-action="" enctype="multipart/form-data">
        <div class="">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>

        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input type="hidden" asp-for="Id" />
                        <input asp-for="Name" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                @*<div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Image"></label>
                        </div>
                        <div class="col-8">
                            <input type="file" asp-for="Image" readonly="readonly" class="form-control" />
                        </div>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>*@
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ProductColor"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ProductColor" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="ProductColor" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ProductTypeId"></label>
                    </div>
                    <div class="col-8">
                        @*<input asp-for="ProductTypeId" class="form-control" />*@
                        @*<select asp-for="ProductTypeId" asp-items="ViewBag.ProductTypeId" readonly="readonly" class="form-control"></select>*@ <!--showing data in dropdown -->
                        <input asp-for="ProductTypeId" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="ProductTypeId" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SpecialTagId"></label>
                    </div>
                    <div class="col-8">
                        @*<select asp-for="SpecialTagId" asp-items="ViewBag.TagId" class="form-control"></select>*@ <!--showing data in dropdown -->
                        <input asp-for="SpecialTagId" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="SpecialTagId" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="IsAvailable"></label>
                    </div>
                    <div class="col-8">
                        <input type="checkbox" asp-for="IsAvailable" disabled="disabled" class="" />
                    </div>
                    <span asp-validation-for="IsAvailable" class="text-danger"></span>
                </div>
            </div>
            <div class="col-1">

            </div>
            <div class="col-3">
                <img src="~/@Model.Image" style="width:100%; border-radius:5px;border:1px solid #e93333" />
            </div>
        </div>
        <div class="form-group">
            <a type="button" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </form>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
