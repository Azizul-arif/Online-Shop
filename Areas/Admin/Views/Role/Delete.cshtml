
@{
    ViewData["Title"] = "Delete";
}
<br />
<br />
<h2 class="text-info">Delete Role</h2>
<div class="container">
    <!--enctype="multipart/form-data" is used to bind data-->
    <form method="post" asp-action="Delete" enctype="multipart/form-data" id="role-form">
        <div class="">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
        </div>

        <h3>@ViewBag.message</h3> <!--To show notification or a message -->
        <div class="form-group row">
            <div class="col-2">
                <label>Role Name</label>
            </div>
            <div class="col-5">
                <input type="hidden" value="@ViewBag.id" name="id" />
                <input type="text" id="name" name="name" required="required" class="form-control" value="@ViewBag.name" readonly="readonly" />
            </div>
        </div>
        <div class="form-group">
            <h3>Are you sure you want to delete this role?</h3>
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    $(document).ready(function () {
        $("#role-form").validate({
            rules: {
                UserName: {
                    required: true,
                },
                PasswordHash: {
                    required: true,
                }
            },
            messages: {
                UserName: "Enter your Username",
                PasswordHash: "Enter your password"
            }

        });
    });
    </script>
}
